<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bg_sendingfailed"
        android:layout_width="282dp"
        android:layout_height="374dp"
        android:layout_marginEnd="236dp"
        android:layout_marginRight="236dp"
        android:contentDescription="@string/sending_failed_computer"
        android:rotation="0"
        android:scaleX="2.9"
        android:scaleY="2.5"
        android:src="@drawable/ic_sendingfailed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="157dp"
        android:layout_height="97dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="@string/sending_failed"
        android:textColor="#DA2626"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/bg_sendingfailed"
        app:layout_constraintTop_toTopOf="@+id/bg_sendingfailed" />


</androidx.constraintlayout.widget.ConstraintLayout>